---
import { NUM_OF_PROJECTS } from '@/utils/data';
import { baseUrl } from '@/utils/functions';
const logo = baseUrl('/assets/wix-logo.png');
---

<section class='am-hero'>
  <h1>
    {NUM_OF_PROJECTS} PROJECTS <br /> USING WIX <br />
    <img src={logo} alt='Logo' />
  </h1>
  <!-- <h1>BUTTERFLIES<br />BACKGROUND</h1> -->
</section>
<style>
  .am-hero {
    height: 100vh;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    place-content: center;
  }

  h1 {
    --fontSize: 3.26vmax;
    --lineHeight: 4.56vmax;

    width: auto;
    height: calc(2 * var(--lineHeight));
    line-height: var(--lineHeight);
    font-size: var(--fontSize);
    color: #ffffff;
    font-family: 'Montserrat', sans-serif;
    text-align: center;
    user-select: none;
    text-shadow:
      0 0 0.33vmax #000000,
      0 0 1.3vmax #000;

    img {
      width: 5vmax;
    }
  }

